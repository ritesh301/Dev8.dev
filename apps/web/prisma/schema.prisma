// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  Authenticator Authenticator[]
  environments  Environment[]
  sshKeys       SSHKey[]
  secrets       Secret[]
  workspaces    Workspace[]
  actionLogs    EnvironmentActionLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

enum EnvironmentStatus {
  CREATING
  STARTING
  RUNNING
  STOPPING
  STOPPED
  PAUSED
  ERROR
  DELETING
}

enum EnvironmentActionType {
  START
  PAUSE
  STOP
  DELETE
}

enum EnvironmentActionStatus {
  PENDING
  SUCCESS
  FAILED
}

enum CloudProvider {
  AZURE
  AWS
  GCP
}

enum IDEType {
  VSCODE
  CURSOR
  JUPYTER
}

enum AgentType {
  NONE
  COPILOT
  CLAUDE
  GEMINI
  CODEX
  COPILOT_PLUS
}

enum SecretType {
  GITHUB_TOKEN
  ANTHROPIC_API_KEY
  OPENAI_API_KEY
  GEMINI_API_KEY
  CUSTOM_ENV_VAR
  SSH_PRIVATE_KEY
}

enum BackupTrigger {
  MANUAL
  PRE_SHUTDOWN
  SCHEDULED
}

enum BackupStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

model Environment {
  id     String            @id @default(cuid())
  userId String
  name   String
  status EnvironmentStatus @default(CREATING)

  // IDE and Agent Configuration
  ideType         IDEType   @default(VSCODE)
  agentType       AgentType @default(NONE)
  dockerImage     String?
  autoStopMinutes Int       @default(30)
  autoStopEnabled Boolean   @default(true)

  // Cloud Configuration
  cloudProvider       CloudProvider @default(AZURE)
  cloudRegion         String        @default("centralindia")
  aciContainerGroupId String?
  aciPublicIp         String?

  // Storage
  azureFileShareName  String?
  vsCodeUrl           String?
  sshConnectionString String?

  // Resources
  cpuCores     Int    @default(2)
  memoryGB     Int    @default(4)
  storageGB    Int    @default(20)
  instanceType String @default("balanced")

  // Template and Configuration
  baseImage            String  @default("node")
  templateName         String?
  environmentVariables Json?
  ports                Json?

  // Cost tracking
  estimatedCostPerHour Float? @default(0.0)
  totalCost            Float? @default(0.0)

  // Timestamps
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  lastAccessedAt DateTime  @default(now())
  stoppedAt      DateTime?
  deletedAt      DateTime?

  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  resourceUsage   ResourceUsage[]
  activityReports ActivityReport[]
  sshKeys         EnvironmentSSHKey[]
  secrets         EnvironmentSecret[]
  workspace       Workspace?
  backups         Backup[]
  actionLogs      EnvironmentActionLog[]

  @@index([userId])
  @@index([status])
  @@index([cloudProvider])
  @@index([createdAt])
  @@index([ideType])
  @@index([agentType])
  @@index([aciContainerGroupId])
  @@index([deletedAt])
  @@index([userId, status, deletedAt])
  @@map("environments")
}

model EnvironmentActionLog {
  id            String                     @id @default(cuid())
  environmentId String
  userId        String
  action        EnvironmentActionType
  status        EnvironmentActionStatus    @default(PENDING)
  message       String?
  metadata      Json?                      @default("{}")
  createdAt     DateTime                   @default(now())
  updatedAt     DateTime                   @updatedAt

  environment Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([environmentId, action])
  @@index([userId])
  @@index([createdAt])
  @@map("environment_action_logs")
}

model Template {
  id             String @id @default(cuid())
  name           String @unique
  displayName    String
  description    String
  baseImage      String
  defaultCPU     Int    @default(2)
  defaultMemory  Int    @default(4)
  defaultStorage Int    @default(20)

  // Template configuration
  category  String   @default("language") // language, framework, database, etc.
  tags      String[] // ["nodejs", "javascript", "backend"]
  icon      String? // Icon name or URL
  isPopular Boolean  @default(false)
  isActive  Boolean  @default(true)

  // Additional config stored as JSON
  defaultPorts   Json? // [{"port": 3000, "protocol": "http"}]
  defaultEnvVars Json? // {"NODE_ENV": "development"}
  extensions     Json? // ["dbaeumer.vscode-eslint"]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([isPopular])
  @@map("templates")
}

model ResourceUsage {
  id            String   @id @default(cuid())
  environmentId String
  timestamp     DateTime @default(now())

  // Resource metrics
  cpuUsagePercent Float?
  memoryUsageMB   Int?
  diskUsageMB     Int?
  networkInMB     Float?
  networkOutMB    Float?

  // Cost calculation
  costAmount    Float?  @default(0.0)
  billingPeriod String?

  environment Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)

  @@index([environmentId, timestamp])
  @@index([timestamp])
  @@map("resource_usage")
}

model ActivityReport {
  id            String @id @default(cuid())
  environmentId String

  lastIDEActivity      DateTime?
  lastSSHActivity      DateTime?
  activeIDEConnections Int       @default(0)
  activeSSHConnections Int       @default(0)
  cpuUsagePercent      Float?
  memoryUsageMB        Int?
  diskUsageMB          Int?
  networkRxMB          Float?
  networkTxMB          Float?
  supervisorVersion    String?
  metadata             Json?     @default("{}")
  reportedAt           DateTime  @default(now())

  environment Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)

  @@index([environmentId, reportedAt])
  @@index([reportedAt])
  @@map("activity_reports")
}

model SSHKey {
  id          String    @id @default(cuid())
  userId      String
  name        String
  publicKey   String    @db.Text
  fingerprint String    @unique
  keyType     String    @default("ed25519")
  isActive    Boolean   @default(true)
  lastUsedAt  DateTime?
  usageCount  Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  expiresAt   DateTime?
  revokedAt   DateTime?

  user                User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  environmentMappings EnvironmentSSHKey[]

  @@index([userId, isActive])
  @@index([fingerprint])
  @@index([expiresAt])
  @@map("ssh_keys")
}

model EnvironmentSSHKey {
  id            String   @id @default(cuid())
  environmentId String
  sshKeyId      String
  addedAt       DateTime @default(now())

  environment Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  sshKey      SSHKey      @relation(fields: [sshKeyId], references: [id], onDelete: Cascade)

  @@unique([environmentId, sshKeyId])
  @@index([environmentId])
  @@index([sshKeyId])
  @@map("environment_ssh_keys")
}

model Secret {
  id            String     @id @default(cuid())
  userId        String
  environmentId String?
  name          String
  secretType    SecretType
  description   String?
  vaultName     String?
  secretName    String?
  secretVersion String?
  lastRotatedAt DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  expiresAt     DateTime?

  user                User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  environmentMappings EnvironmentSecret[]

  @@unique([userId, name])
  @@index([userId])
  @@index([secretType])
  @@index([expiresAt])
  @@map("secrets")
}

model EnvironmentSecret {
  id            String   @id @default(cuid())
  environmentId String
  secretId      String
  overrideValue String?  @db.Text
  addedAt       DateTime @default(now())

  environment Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  secret      Secret      @relation(fields: [secretId], references: [id], onDelete: Cascade)

  @@unique([environmentId, secretId])
  @@index([environmentId])
  @@index([secretId])
  @@map("environment_secrets")
}

model Workspace {
  id            String @id @default(cuid())
  environmentId String @unique
  userId        String

  storagePath         String
  storageType         String    @default("azure-blob")
  azureStorageAccount String?
  azureContainerName  String?
  azureBlobPrefix     String?
  backupEnabled       Boolean   @default(true)
  backupRetentionDays Int       @default(30)
  lastBackupAt        DateTime?
  totalSizeMB         Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  environment Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  backups     Backup[]

  @@index([userId])
  @@index([environmentId])
  @@map("workspaces")
}

model Backup {
  id            String        @id @default(cuid())
  workspaceId   String
  environmentId String
  trigger       BackupTrigger
  status        BackupStatus  @default(PENDING)

  backupPath   String?
  backupSizeMB Int?
  startedAt    DateTime  @default(now())
  completedAt  DateTime?
  errorMessage String?   @db.Text
  metadata     Json?     @default("{}")

  workspace   Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  environment Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([environmentId])
  @@index([status])
  @@index([startedAt])
  @@map("backups")
}
